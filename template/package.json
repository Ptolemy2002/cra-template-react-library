{
    "name": "@local/lib",
    "version": "0.0.0",
    "main": "index.js",
    "files": [
        "index.js"
    ],
    "scripts": {
        "uninstall": "rm -rf node_modules",
        "reinstall": "npm run uninstall && npm install",
        "example-uninstall": "cd example && npm run uninstall",
        "example-install": "cd example && npm install",
        "example-reinstall": "cd example && npm run reinstall",
        "example-start": "npm run build && cd example && npm start",
        "build": "esbuild src/index.js --bundle --format=cjs --outfile=index.js",
        "release": "npm run build && npm publish --access public",
        "release-patch": "npm version patch && npm run release",
        "release-minor": "npm version minor && npm run release",
        "release-major": "npm version major && npm run release"
    },
    "description": "Example of a React library",
    "license": "ISC",
    "peerDependencies": {
        "react": ">=18.0.0",
        "react-dom": ">=18.0.0"
    },
    "devDependencies": {
        "esbuild": "^0.23.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    }
}